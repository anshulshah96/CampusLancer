<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#77FFFFFF"
    android:padding="5dp"
    android:layout_margin="5dp"

    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false" >
    <TextView
        android:id="@+id/existing_projects_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/WorkDescriptionTopic"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false" />

    <TextView
        android:id="@+id/existing_projects_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/existing_projects_topic"

        android:text="Description"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false" />

    <TextView
        android:id="@+id/existing_projects_bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/existing_projects_description"

        android:text="@string/WorkDescriptionBid"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false" />
    <TextView
        android:id="@+id/existing_project_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/existing_projects_description"

        android:text="@string/WorkDescriptionBid"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:visibility="gone"
        />

</RelativeLayout>