<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dip"
    android:layout_margin="5dp"

    android:background="@drawable/custom_gradient"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"

    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/existing_projects_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="5dip"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/WorkDescriptionTopic"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/existing_projects_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/existing_projects_topic"
        android:layout_marginLeft="5dip"
        android:clickable="false"

        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/WorkDescriptionDummy"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#222222"
        android:textSize="18sp" />

    <!--<TextView
        android:id="@+id/existing_projects_bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/existing_projects_description"

        android:text="@string/WorkDescriptionBid"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false" />
    -->

    <TextView
        android:id="@+id/existing_projects_bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/existing_projects_description"

        android:layout_marginLeft="5dip"
        android:clickable="false"

        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Bid: Rs."

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/existing_project_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/existing_projects_description"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/existing_projects_bid"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/WorkDescriptionBid"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#333333"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/existing_projects_bid"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Delete" />

</RelativeLayout>